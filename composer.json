{
    "name": "blood-donation-system",
    "description": "A PHP project for managing a blood donation system.",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.0",
        "illuminate/database": "^8.0",
        "vlucas/phpdotenv": "^5.0",
        "monolog/monolog": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}